<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:include="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2.5dp"
    android:layout_marginEnd="2.5dp"
    android:layout_marginLeft="2.5dp"
    android:layout_marginRight="2.5dp"
    android:layout_marginStart="2.5dp"
    android:layout_marginTop="2.5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">

            <TextView
                android:id="@+id/timed"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="2.5dp"
                android:background="@drawable/textview_round_design"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="2.5dp"
                android:text="12:12:12 AM"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="2.5dp"
                android:text="Date :"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/order_date"
                android:padding="2.5dp"
                android:text="fill the time here"
                android:textSize="12sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_id"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="2.5dp"
                android:text="Order id here"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_id1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/order_id"
                android:padding="2.5dp"
                android:text="fill the orderid here"
                android:textSize="12sp"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_status"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="2.5dp"
                android:text="status :"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_status1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/order_status"
                android:padding="2.5dp"
                android:text="fill the status here"
                android:textSize="12sp"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/local_info"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="2.5dp"
                android:text="local Info :"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/local_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/local_info"
                android:padding="2.5dp"
                android:text="fill the time here"
                android:textSize="12sp"
                android:textStyle="normal" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="check" />

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="remove" />

            </RadioGroup>

            <Button
                android:id="@+id/checkout_from_placedstate"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:padding="3dp"
                android:background="#8bc34a"
                android:gravity="center"
                android:text="Checkout" />


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>