<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_root"
        android:layout_height="match_parent"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/text_address_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="Home"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_address_type"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_flat_locality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Flat and locality"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/linear123"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_flat_locality"
            android:ellipsize="end"
            android:maxLines="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_landmark"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"

                android:maxLines="1"
                android:padding="5dp"
                android:text="Land mark"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_edit"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/text_landmark"
                android:src="@drawable/ic_menu_send" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>




